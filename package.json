{
  "name": "puro",
  "version": "0.2.6",
  "description": "A simple utility library to create react context/provider with proper typing support",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:compile": "tsup src/index.tsx --watch --sourcemap",
    "dev:test": "jest --watch",
    "build": "tsup src/index.tsx  --dts-resolve --format esm --minify --clean",
    "test": "jest",
    "prepublishOnly": "run-s build"
  },
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmo-corp/puro.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "context",
    "providers"
  ],
  "peerDependencies": {
    "react": ">=17 || >=18"
  },
  "dependencies": {
    "react": "18.1.0"
  },
  "devDependencies": {
    "@jest/globals": "28.1.0",
    "@plasmo-corp/rps": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "17.0.31",
    "@types/react": "18.0.8",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "ts-jest": "next",
    "tsup": "5.12.6",
    "typescript": "4.6.4"
  }
}
